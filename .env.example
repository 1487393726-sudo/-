# 数据库配置
# PostgreSQL 连接字符串
# 格式: postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL="postgresql://user:password@localhost:5432/giftbox"

# JWT 密钥
# 用于生成和验证 JWT Token
# 生产环境请使用强随机字符串（至少 32 个字符）
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# 应用 URL
# 开发环境: http://localhost:3000
# 生产环境: https://your-domain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node 环境
# development | production | test
NODE_ENV="development"

# ==========================================
# 可选配置（生产环境需要）
# ==========================================

# 邮件服务配置（用于密码重置等功能）
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-email-password"
# SMTP_FROM="noreply@giftbox.com"

# 支付服务配置
# 微信支付
# WECHAT_APP_ID="your-wechat-app-id"
# WECHAT_MCH_ID="your-merchant-id"
# WECHAT_API_KEY="your-api-key"

# 支付宝
# ALIPAY_APP_ID="your-alipay-app-id"
# ALIPAY_PRIVATE_KEY="your-private-key"
# ALIPAY_PUBLIC_KEY="alipay-public-key"

# 文件上传配置
# 阿里云 OSS
# OSS_REGION="oss-cn-hangzhou"
# OSS_ACCESS_KEY_ID="your-access-key-id"
# OSS_ACCESS_KEY_SECRET="your-access-key-secret"
# OSS_BUCKET="your-bucket-name"

# AWS S3
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key-id"
# AWS_SECRET_ACCESS_KEY="your-secret-access-key"
# AWS_S3_BUCKET="your-bucket-name"

# 短信服务配置（用于验证码等）
# 阿里云短信
# SMS_ACCESS_KEY_ID="your-access-key-id"
# SMS_ACCESS_KEY_SECRET="your-access-key-secret"
# SMS_SIGN_NAME="your-sign-name"
# SMS_TEMPLATE_CODE="your-template-code"

# 监控和分析
# Sentry（错误追踪）
# SENTRY_DSN="your-sentry-dsn"

# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# 其他配置
# 日志级别: debug | info | warn | error
# LOG_LEVEL="info"

# 会话超时时间（秒）
# SESSION_TIMEOUT="86400"

# 文件上传大小限制（MB）
# MAX_FILE_SIZE="5"

# 每页显示数量
# PAGE_SIZE="20"
